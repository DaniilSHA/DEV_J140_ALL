<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox alignment="CENTER" spacing="30" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.dev_j140_all.controllers.RegistrationController">

    <Label fx:id="info" alignment="CENTER">Welcome to registration page. Please create you account </Label>

    <HBox alignment="CENTER" spacing="20">
        <Label fx:id="usernameLabel">User name:</Label>
        <TextField fx:id="login" />
    </HBox>

    <HBox alignment="CENTER" spacing="20">
        <Label fx:id="passwordLabel">Password:</Label>
        <PasswordField fx:id="password" />
    </HBox>

    <Label fx:id="statusMessage" alignment="CENTER" maxWidth="300" wrapText="true" textAlignment="CENTER"/>

    <HBox alignment="CENTER" spacing="20">
        <Button fx:id="activeButton" onAction="#onActiveButtonClick">make registration</Button>
        <Button fx:id="switchButton" onAction="#onSwitchButtonClick">go to login page</Button>
    </HBox>

</VBox>
