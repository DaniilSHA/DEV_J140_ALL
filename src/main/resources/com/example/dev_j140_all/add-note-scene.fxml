<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<VBox xmlns:fx="http://javafx.com/fxml" spacing="10"
      fx:controller="com.example.dev_j140_all.controllers.AddNoteStageController">

    <HBox alignment="CENTER">
        <Label text="Add new node's information" textAlignment="CENTER"/>
    </HBox>

    <HBox alignment="CENTER">
        <Label text="Add first name: " textAlignment="CENTER"/>
        <TextField fx:id="firstNameTextField"/>
    </HBox>

    <HBox alignment="CENTER">
        <Label text="Add last name: " textAlignment="CENTER"/>
        <TextField fx:id="lastNameTextField"/>
    </HBox>

    <HBox alignment="CENTER">
        <Label text="Add email: " textAlignment="CENTER"/>
        <TextField fx:id="emailTextField"/>
    </HBox>

    <HBox alignment="CENTER">
        <Label text="Add gender: " textAlignment="CENTER"/>
        <TextField fx:id="genderTextField"/>
    </HBox>

    <HBox alignment="CENTER">
        <Label text="Add credit card: " textAlignment="CENTER"/>
        <TextField fx:id="creditCardTextField"/>
    </HBox>

    <HBox alignment="CENTER">
        <Label text="Add balance: " textAlignment="CENTER"/>
        <TextField fx:id="balanceTextField"/>
    </HBox>

    <HBox alignment="CENTER" spacing="20">
        <Button text="Add note" onAction="#onAddNoteButtonClick"/>
        <Button text="Clear" onAction="#onClearButtonClick"/>
        <Button text="Close" onAction="#onCloseButtonClick"/>
    </HBox>

</VBox>

